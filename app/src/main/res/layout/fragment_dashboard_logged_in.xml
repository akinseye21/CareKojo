                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_red_bg"
                        android:padding="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming Appointments"
                            android:textColor="#fff"
                            android:textSize="13dp"
                            android:fontFamily="@font/montserratmedium" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_centerVertical="true"
                                android:id="@+id/one">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/person"
                                    app:civ_circle_background_color="#fff"
                                    app:civ_border_color="@color/red"
                                    app:civ_border_width="1dp" />
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_logo"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/one">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dr. Fisayo Olatunji"
                                    android:textSize="12dp"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/montserratsemibold"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Physiotherapist"
                                    android:textSize="12dp"
                                    android:textColor="#ffffff"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserratregular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Grace of God Maitama"
                                    android:textSize="10dp"
                                    android:textColor="#fff"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/montserratsemibold"/>

                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="69dp"
                                android:background="#FFFFFF5E"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10:00"
                                    android:textSize="11dp"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/montserratregular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jan 28th"
                                    android:textSize="14dp"
                                    android:textColor="#ffffff"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserratmedium"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="396dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_red_bg"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Upcoming Events"
                            android:textColor="#fff"
                            android:textSize="13dp"
                            android:fontFamily="@font/montserratmedium" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_centerVertical="true">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/person"
                                    app:civ_circle_background_color="#fff"
                                    app:civ_border_color="@color/red"
                                    app:civ_border_width="1dp" />
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_logo"
                                    android:layout_centerHorizontal="true"
                                    android:layout_alignParentBottom="true"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/one">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dr. Fisayo Olatunji"
                                    android:textSize="12dp"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/montserratsemibold"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Physiotherapist"
                                    android:textSize="12dp"
                                    android:textColor="#ffffff"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserratregular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Grace of God Maitama"
                                    android:textSize="10dp"
                                    android:textColor="#fff"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/montserratsemibold"/>

                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="69dp"
                                android:background="#FFFFFF5E"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10:00"
                                    android:textSize="11dp"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/montserratregular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jan 28th"
                                    android:textSize="14dp"
                                    android:textColor="#ffffff"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserratmedium"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:id="@+id/view1"
                    android:background="@drawable/button_orange"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:id="@+id/view2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_orange"
                    android:backgroundTint="#62B72025" />
                <View
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:id="@+id/view3"
                    android:background="@drawable/button_orange"
                    android:backgroundTint="#62B72025" />

            </LinearLayout>
            <LinearLayout
