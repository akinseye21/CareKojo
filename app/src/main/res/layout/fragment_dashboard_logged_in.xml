                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/cart"
                        android:id="@+id/cart"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orders"
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/cart"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserratregular"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="View All Orders"
                            android:textColor="#B72025"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserratregular"/>
                        <View
                            android:layout_width="85dp"
                            android:layout_height="0.5dp"
                            android:background="@color/red"/>

                    </LinearLayout>


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_card"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Recent"
                        android:textSize="11dp"
                        android:textColor="#707070"
                        android:fontFamily="@font/montserratregular"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/ic_logo"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/one">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coaterm Malaria Pack"
                                android:textSize="12dp"
                                android:textColor="#040101"
                                android:fontFamily="@font/montserratregular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NGN 1300"
                                android:textSize="13dp"
                                android:textColor="#040101"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserratsemibold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frestel Clinic"
                                android:textSize="10dp"
                                android:textColor="#040101"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserratsemibold"/>

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="69dp"
                            android:background="#40B72025"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track Item"
                            android:textSize="11dp"
                            android:textColor="#B72025"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserratsemibold"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/bookmark"
                        android:id="@+id/bookmark"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favourites"
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/bookmark"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserratregular"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="View Favourites"
                            android:textColor="#B72025"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserratregular"/>
                        <View
                            android:layout_width="88dp"
                            android:layout_height="0.5dp"
                            android:background="@color/red"/>

                    </LinearLayout>


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_card"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Recent - medical facility"
                        android:textSize="11dp"
                        android:textColor="#707070"
                        android:fontFamily="@font/montserratregular"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/ic_logo"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/one">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="God is Good Medicals"
                                android:textSize="12dp"
                                android:textColor="#040101"
                                android:fontFamily="@font/montserratregular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="General Hospital"
                                android:textSize="10dp"
                                android:textColor="#040101"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserratregular"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frestel Clinic"
                                android:textSize="10dp"
                                android:textColor="#040101"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserratsemibold"/>

                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="69dp"
                            android:background="#40B72025"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navigate"
                            android:textSize="11dp"
                            android:textColor="#B72025"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserratsemibold"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/saved"
                        android:id="@+id/saved"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved Articles"
                        android:textColor="@color/red"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/saved"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserratregular"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="View More Saved Articles"
                            android:textColor="#B72025"
                            android:textSize="11dp"
                            android:fontFamily="@font/montserratregular"/>
                        <View
                            android:layout_width="141dp"
                            android:layout_height="0.5dp"
                            android:background="@color/red"/>

                    </LinearLayout>


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_card"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Recent - medical facility"
                        android:textSize="11dp"
                        android:textColor="#707070"
                        android:fontFamily="@font/montserratregular"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/ic_logo"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/one">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
