<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".activities.ForgotPassword">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_ic3"
        android:layout_alignParentEnd="true"
        android:scaleType="matrix"
        android:rotation="270"
        app:tint="#707070" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/firstView"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#70ffffff"
            android:id="@+id/bar"
            android:padding="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                app:tint="@color/black"
                android:id="@+id/back"
                android:layout_marginLeft="-5dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="#200F0F"
                android:fontFamily="@font/montserratsemibold"
                android:layout_alignParentStart="true"
                android:textSize="24dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request a guide to reset your password"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/montserratmedium"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/white_card2"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="10dp"
                        app:passwordToggleEnabled="false"
                        app:passwordToggleTint="#058523"
                        app:passwordToggleDrawable="@drawable/circle_check"
                        app:hintTextColor="@color/red">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="Email"
                            android:textColor="#000000"
                            android:textSize="12dp"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:fontFamily="@font/montserratsemibold"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:text="Reset Password"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:id="@+id/reset"
                        android:fontFamily="@font/montserratregular"
                        android:textAllCaps="false"
                        android:background="@drawable/button_orange"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutReset"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#70ffffff"
            android:id="@+id/bar6"
            android:padding="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                app:tint="@color/black"
                android:id="@+id/back6"
                android:layout_marginLeft="-5dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="#200F0F"
                android:fontFamily="@font/montserratsemibold"
                android:layout_alignParentStart="true"
                android:textSize="24dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bar6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <ImageView
                        android:layout_width="205dp"
                        android:layout_height="179.94dp"
                        android:src="@drawable/plane"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail Sent!"
                        android:textSize="20dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:textColor="#130102"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="60dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reset your password at"
                            android:textSize="13dp"
                            android:gravity="center"
                            android:fontFamily="@font/montserratmedium"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="abayomi.akinseye@e4email.net"
                            android:textSize="13dp"
                            android:fontFamily="@font/montserratsemibold"
                            android:textColor="#B72025"/>
                    </LinearLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/login"
                        android:text="Back to Login"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserratregular"
                        android:textAllCaps="false"
                        android:background="@drawable/button_orange"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your did you not receive an email? Check your spam or folders or request a new Mail."
                            android:textSize="13dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/montserratsemibold"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Resend Mail"
                            android:textSize="13dp"
                            android:fontFamily="@font/montserratsemibold"
                            android:textColor="@color/red"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_ic3"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="matrix"
        android:rotation="90"
        app:tint="#90707070" />

</RelativeLayout>